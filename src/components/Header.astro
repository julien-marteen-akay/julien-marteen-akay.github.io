---
import ThemeToggleButton from './ThemeToggleButton.astro'; // Import the new component

// Define navigation links
const navLinks = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Publications", href: "/publications" }, // Added publications link
  { name: "Blog", href: "/blog" },           // Added blog link
];

const currentPath = Astro.url.pathname;
---
<header class="sticky top-0 z-50 py-3 px-4 backdrop-blur-lg border-b bg-light/90 border-border_light_light dark:bg-dark/80 dark:border-border_dark transition-colors duration-300">
  {/* Updated background/border colors for light and dark */}
  <nav class="container mx-auto flex justify-between items-center max-w-4xl">
    <a href="/" class="text-2xl font-bold text-accent_yellow hover:text-accent_cyan transition-colors duration-300 ease-in-out">
      Julien Marteen Akay
    </a>
    <div class="flex items-center space-x-4 md:space-x-6">
      {/* Navigation Links */}
      <ul class="flex space-x-4 md:space-x-6">
        {navLinks.map(link => (
          <li>
            <a 
              href={link.href} 
              class:list={[
                "text-lg transition-colors duration-200 ease-in-out text-text_secondary_light dark:text-text_secondary_dark", // Base text colors
                currentPath === link.href 
                  ? "text-accent_magenta font-semibold dark:text-accent_magenta" // Active link style
                  : "hover:text-accent_cyan dark:hover:text-accent_cyan" // Non-active hover style
              ]}
            >
              {link.name}
            </a>
          </li>
        ))}
      </ul>
      {/* Theme Toggle Button */}
      <ThemeToggleButton />
    </div>
  </nav>
</header> 