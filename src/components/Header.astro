---
import ThemeToggleButton from './ThemeToggleButton.astro'; // Import the new component

// Define navigation links
const navLinks = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Publications", href: "/publications" }, // Added publications link
  { name: "Blog", href: "/blog" },           // Added blog link
];

const currentPath = Astro.url.pathname;
---
<header class="sticky top-0 z-50 py-3 px-4 backdrop-blur-lg border-b bg-light/90 border-border_light_light dark:bg-dark/80 dark:border-border_dark transition-colors duration-300">
  {/* Updated background/border colors for light and dark */}
  <nav class="container mx-auto flex justify-between items-center max-w-4xl">
    <a href="/" class="text-2xl font-bold text-text_primary_light dark:text-text_primary_dark hover:text-accent_cyan transition-colors duration-300 ease-in-out">
      Julien Marteen Akay
    </a>
    <div class="flex items-center space-x-4 md:space-x-6">
      {/* Navigation Links */}
      <ul class="flex space-x-4 md:space-x-6">
        {navLinks.map(link => {
          const isActive = currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href + '/'));
          return (
            <li>
              <a 
                href={link.href} 
                class:list={[
                  "relative text-lg transition-colors duration-200 ease-in-out group", // Added relative and group
                  "text-text_secondary_light dark:text-text_secondary_dark", // Base colors
                  isActive
                    ? "text-accent_magenta font-semibold dark:text-accent_magenta" // Active color
                    : "hover:text-accent_cyan dark:hover:text-accent_cyan" // Hover color
                ]}
              >
                {link.name}
                {/* Underline for Active State */}
                {isActive && (
                  <span class="absolute bottom-[-4px] left-0 w-full h-0.5 bg-accent_magenta"></span>
                )}
                {/* Animated Underline for Hover State (non-active links) */}
                {!isActive && (
                  <span class="absolute bottom-[-4px] left-0 w-full h-0.5 bg-accent_cyan 
                             scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-out origin-left">
                  </span>
                )}
              </a>
            </li>
          );
        })}
      </ul>
      {/* Theme Toggle Button */}
      <ThemeToggleButton />
    </div>
  </nav>
</header> 