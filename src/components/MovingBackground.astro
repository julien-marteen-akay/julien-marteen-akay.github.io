// No props needed for this simple version
---
<div class="moving-background" aria-hidden="true"></div>

<style>
  .moving-background {
    position: fixed; /* Stick to the viewport */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -10; /* Place it behind all content */
    background: linear-gradient(
      -45deg, 
      #1a1a1a, /* Base dark */
      #2a2a2a, /* Slightly lighter dark */
      #1a1a1a, 
      #00334d, /* Deep cyan hint */
      #1a1a1a,
      #4d4d00, /* Deep yellow hint */
      #1a1a1a
    );
    background-size: 400% 400%;
    animation: gradientBG 25s ease infinite;
    opacity: 0.6; /* Make it subtle */
  }

  @keyframes gradientBG {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Ensure it doesn't interfere with light mode too much */
  html:not(.dark) .moving-background {
     opacity: 0.1; /* Make it very faint in light mode */
  }

</style> 