// No props needed for this simple version
---
<div class="moving-background" aria-hidden="true"></div>

<style>
  .moving-background {
    position: fixed; /* Stick to the viewport */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -10; /* Place it behind all content */
    background: linear-gradient(
      -45deg, 
      #0d1117, /* New base dark */
      #161b22, /* Slightly lighter dark */
      #0d1117, 
      #1c2128, /* Subtle blue hint */
      #0d1117,
      #22272e, /* Subtle warm hint */
      #0d1117
    );
    background-size: 400% 400%;
    animation: gradientBG 30s ease infinite; /* Slower animation */
    opacity: 0.8; /* Slightly more visible */
  }

  @keyframes gradientBG {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Ensure it doesn't interfere with light mode too much - Removing this as light mode is gone */
  /* html:not(.dark) .moving-background {
     opacity: 0.1; /* Make it very faint in light mode */
  /*} */

  /* Keep gradient but stop animation on specific pages */
  body.no-moving-background .moving-background {
    animation: none;
  }

</style> 