---
// No props needed for this simple version
---
<div class="moving-background" aria-hidden="true"></div>

<style>
  .moving-background {
    position: fixed; /* Stick to the viewport */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -10; /* Place it behind all content */
    background-size: 400% 400%;
    animation: gradientBG 30s ease infinite;
    transition: opacity 0.3s ease;
  }

  /* Light mode background */
  html:not(.dark) .moving-background {
    background: linear-gradient(
      -45deg, 
      #ffffff, /* Pure white */
      #f8fafc, /* Very light gray */
      #ffffff, 
      #f1f5f9, /* Subtle blue hint */
      #ffffff,
      #f8fafc, /* Very light warm hint */
      #ffffff
    );
    opacity: 0.6; /* Subtle in light mode */
  }

  /* Dark mode background */
  html.dark .moving-background {
    background: linear-gradient(
      -45deg, 
      #0d1117, /* New base dark */
      #161b22, /* Slightly lighter dark */
      #0d1117, 
      #1c2128, /* Subtle blue hint */
      #0d1117,
      #22272e, /* Subtle warm hint */
      #0d1117
    );
    opacity: 0.8; /* More visible in dark mode */
  }

  @keyframes gradientBG {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Keep gradient but stop animation on specific pages */
  body.no-moving-background .moving-background {
    animation: none;
  }

</style> 