---
// Import global styles
import '../styles/global.css';

// Import components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
// import MovingBackground from '../components/MovingBackground.astro'; // Keep commented out

// Define props the layout accepts (e.g., title, description for SEO)
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'Julien Marteen Akay - Personal Website',
	description = 'Personal website of Julien Marteen Akay, ML Research Engineer and AI Researcher.' 
} = Astro.props;
---
<!doctype html>
<html lang="en" class="dark scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" /> 
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		
		{/* Add any other head elements like fonts, etc. */}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

	</head>
	<body class="bg-gray-900 text-gray-100 min-h-screen flex flex-col font-sans">
		{/* <MovingBackground /> Keep commented out */}
		<Header />
		<main class="flex-grow container mx-auto px-4 py-8 w-full max-w-4xl">
			<slot /> {/* Page content will be injected here */}
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	/* Apply base font family */
	html {
		font-family: 'Inter', sans-serif;
	}
	/* Add other global styles if needed */
</style> 