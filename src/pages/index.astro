---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';

const pageTitle = "Home";
const name = "Julien Marteen Akay";
const role = "ML Research Engineer in Industry";
const academicRole = "Autonomous AI Research in Academia"; // Second line with academic role
// Colors are applied in the HTML via text-accent_yellow class or similar
const tagline = "Aiming to build autonomous, human-level machine intelligence â€” in my lifetime, ideally during my PhD."; // Adapted from bio
const avatarSrc = "/avatar.jpg"; // Ensure avatar.jpg is in public/
const cvLink = "https://drive.google.com/file/d/1rk4o8Lkwv0f1d9SKO-J6Oi3S-34N0uIc/view?usp=drive_link"; // From profile

// Remove imports for recent posts/publications as they are no longer displayed
// const recentPublications = ...
// const recentPosts = ... 
---
<BaseLayout title={pageTitle}>
  <section class="min-h-[calc(100vh-200px)] flex items-center py-16 md:py-24">
    {/* Adjust height and padding */}
    <div class="container mx-auto max-w-4xl grid grid-cols-1 md:grid-cols-3 gap-12 items-center">
      {/* Avatar Column (Left on Medium+) */}
      <div class="md:col-span-1 flex justify-center md:justify-start">
        <img 
          src={avatarSrc} 
          alt="Profile picture of Julien Marteen Akay" 
          class="w-40 h-40 md:w-48 md:h-48 lg:w-56 lg:h-56 rounded-full border-2 border-border_light_dark object-cover shadow-lg"
        />
      </div>
      
      {/* Text Column (Right on Medium+) */}
      <div class="md:col-span-2 text-center md:text-left">
        <h1 class="text-4xl sm:text-5xl font-bold text-text_primary_dark mb-3 leading-tight">{name}</h1>
        
        {/* Roles as Subtle Badges */}
        <div class="flex flex-wrap justify-center md:justify-start gap-x-3 gap-y-2 mb-6">
          <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-accent_cyan/20 text-accent_cyan border border-accent_cyan/30">
            {role}
          </span>
          <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-accent_yellow/20 text-accent_yellow border border-accent_yellow/30">
            {academicRole}
          </span>
        </div>

        <p class="text-lg sm:text-xl text-text_secondary_dark max-w-xl mx-auto md:mx-0 mb-8">{tagline}</p>
        <div class="flex justify-center md:justify-start space-x-4">
          {/* Removed "Learn More" Button */}
          {/* Changed "View CV" button style */}
          <Button href={cvLink} target="_blank" text="View CV" color="yellow" variant="outline" /> 
        </div>
      </div>
    </div>
  </section>

  {/* REMOVED Recent Activity section */}

</BaseLayout> 