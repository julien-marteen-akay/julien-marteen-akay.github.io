---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import { Icon } from 'astro-icon/components';
import { marked } from 'marked';

const title = "About Me";
const description = "Learn more about Julien Marteen Akay, his research interests, education, and background.";

// Extracted data
const bio = "Mainly interested in tackling hard AI problems with practical impact. Currently pursuing a PhD focused on Autonomous AI.";
const interests = [
  "Advanced Machine Intelligence",
  "Objective-Driven AI",
  "Self-Supervised Learning",
];
const education = [
  { course: "M.Sc. (Research Master) in Data Science", institution: "Hochschule Bielefeld - University of Applied Sciences and Arts", year: 2024 },
  { course: "B.Eng. in Mechanical Engineering", institution: "Hochschule Bielefeld - University of Applied Sciences and Arts", year: 2021 }
];
const socialLinks = [
  { href: "mailto:julien.marteen.akay@gmail.com", label: "Email", icon: "mdi:envelope" },
  { href: "https://www.linkedin.com/in/julien-marteen-akay", label: "LinkedIn", icon: "mdi:linkedin" },
  { href: "https://medium.com/@julien.marteen.akay", label: "Medium", icon: "mdi:medium" },
  { href: "https://x.com/julien_marteen", label: "X (Twitter)", icon: "simple-icons:x" },
  { href: "https://github.com/julien-marteen-akay", label: "GitHub", icon: "mdi:github" },
  { href: "https://orcid.org/0009-0003-7639-5627", label: "ORCID", icon: "academicons:orcid" }
];
const cvLink = "https://drive.google.com/file/d/1rk4o8Lkwv0f1d9SKO-J6Oi3S-34N0uIc/view?usp=drive_link";
const avatarSrc = "/avatar.jpg"; 
const detailedBio = `Hi! I'm Julien Marteen Akay â€” an ML research engineer in industry, a research associate in academia, and currently pursuing a PhD in *"Hierarchical Planning for Cognitive and Autonomous Machine Intelligence"*. My research interests revolve around the goal of developing **human-level AI**. Inspired by [A Path Towards Autonomous Machine Intelligence](https://openreview.net/pdf?id=BZ5a1r-kVsf), in my PhD I'm tackling the problem of building a cognitive architecture that, among other things, leverages a hierarchical joint-embedding predictive architecture (H-JEPA).

Practically, I'm interested in objective-driven AI (ODAI), self-supervised learning (SSL), energy-based models (EBMs), and related areas.

*&rarr;* Currently working on the H-JEPA.`;

// Parse the Markdown string into HTML
const renderedBioHtml = marked.parse(detailedBio);

---
<BaseLayout title={title} description={description}>
  <div class="space-y-12">
    {/* Hero Section - Mobile First Design */}
    <section class="pt-8">
      <!-- Mobile Layout: Stacked -->
      <div class="block md:hidden space-y-6">
        <div class="flex justify-center">
          <img 
            src={avatarSrc} 
            alt="Julien Marteen Akay" 
            class="w-32 h-32 sm:w-40 sm:h-40 rounded-lg border-2 border-border_dark_dark object-cover shadow-lg"
          />
        </div>
        <div class="text-center space-y-4">
          <h1 class="text-3xl sm:text-4xl font-bold text-accent_yellow">About Me</h1>
          <p class="text-base sm:text-lg text-text_secondary_dark">{bio}</p>
          <div class="prose dark:prose-invert max-w-none text-text_primary_dark prose-sm sm:prose-base text-left" set:html={renderedBioHtml} />
          
          {/* Mobile Buttons - Stacked */}
          <div class="flex flex-col items-center space-y-4 pt-4">
            <Button href={cvLink} target="_blank" color="yellow" text="View CV" variant="outline" class="w-full sm:w-auto" />
            
            {/* Connect Links */}
            <div class="flex flex-wrap justify-center gap-4">
              {socialLinks.map(link => (
                <a 
                  href={link.href} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  aria-label={link.label}
                  title={link.label} 
                  class="text-text_secondary_dark hover:text-accent_cyan transition-colors duration-200 p-2 touch-manipulation"
                >
                  <span class="sr-only">{link.label}</span>
                  <Icon name={link.icon} class="w-6 h-6" />
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Desktop Layout: Float -->
      <div class="hidden md:block clearfix">
        <img 
          src={avatarSrc} 
          alt="Julien Marteen Akay" 
          class="w-40 h-40 lg:w-48 lg:h-48 rounded-lg border-2 border-border_dark_dark object-cover shadow-lg mb-4 float-left mr-8 max-w-[180px] lg:max-w-[220px]"
        />
        <div class="space-y-4">
          <h1 class="text-4xl font-bold text-accent_yellow">About Me</h1>
          <p class="text-lg text-text_secondary_dark">{bio}</p>
          <div class="prose dark:prose-invert max-w-none text-text_primary_dark" set:html={renderedBioHtml} />
          
          {/* Desktop Buttons - Inline */}
          <div class="flex items-center pt-4 gap-6">
            <Button href={cvLink} target="_blank" color="yellow" text="View CV" variant="outline" />
            
            {/* Connect Links */}
            <div class="flex flex-wrap gap-4">
              {socialLinks.map(link => (
                <a 
                  href={link.href} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  aria-label={link.label}
                  title={link.label} 
                  class="text-text_secondary_dark hover:text-accent_cyan transition-colors duration-200"
                >
                  <span class="sr-only">{link.label}</span>
                  <Icon name={link.icon} class="w-6 h-6" />
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Interests & Education Section */}
    <section class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      {/* Interests Column */}
      <div>
        <h2 class="text-xl sm:text-2xl font-semibold mb-4 text-accent_yellow border-b border-border_dark_dark pb-2">Research Interests</h2>
        <ul class="space-y-2 list-disc list-inside text-text_primary_dark text-sm sm:text-base">
          {interests.map(interest => (
            <li>{interest}</li>
          ))}
        </ul>
      </div>

      {/* Education Column */}
      <div>
        <h2 class="text-xl sm:text-2xl font-semibold mb-4 text-accent_yellow border-b border-border_dark_dark pb-2">Education</h2>
        <div class="space-y-4">
          {education.map(edu => (
            <div class="p-3 border border-transparent rounded-md">
              <h3 class="text-base sm:text-lg font-medium text-accent_cyan">{edu.course}</h3>
              <p class="text-text_secondary_dark text-xs sm:text-sm">{edu.institution}</p>
              <p class="text-xs text-text_secondary_dark/70 mt-0.5">{edu.year}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

  </div>
</BaseLayout> 